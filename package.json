{
  "name": "paywhoops",
  "description": "Paywhoops! is a Firefox extension that removes paywalls, granting free access to content online without restrictions.",
  "author": "cob0 <cob0@tutanota.com>",
  "homepage": "https://github.com/cob0/paywhoops/tree/main/#readme",
  "bugs": "https://github.com/cob0/paywhoops/issues",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cob0",
    "firefox",
    "chrome",
    "web",
    "extension",
    "es2015",
    "npm"
  ],
  "license": "AGPL-3.0-or-later",
  "type": "module",
  "private": false,
  "scripts": {
    "build": "npm run build:clean && npm run build:check && npm run rollup:build && npm run build:check:extension",
    "build:check": "npm run check:dev",
    "build:check:extension": "npm run check:extension",
    "build:clean": "rm -rf dist && rm -f *.zip",
    "check:dev": "npx @biomejs/biome check --write src/",
    "check:extension": "web-ext lint -s dist",
    "dev": "npm run check:dev && npm run rollup:dev",
    "rollup:build": "rollup -c",
    "rollup:dev": "rollup -c -w"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rollup/plugin-commonjs": "28.0.3",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-replace": "6.0.2",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/node": "22.15.17",
    "rollup": "2.79.2",
    "rollup-plugin-copy": "3.5.0",
    "web-ext": "8.6.0"
  },
  "files": [
    "dist"
  ]
}
